            </column>
            <column name="invoicepaymentamount" type="decimal(21,2)">
                <constraints nullable="true" />
            </column>
            <column name="loanpaymentamount" type="decimal(21,2)">
                <constraints nullable="true" />
            </column>
            <column name="accountoutstandingamount" type="decimal(21,2)">
                <constraints nullable="true" />
            </column>
            <column name="pendingpaymentamount" type="decimal(21,2)">
                <constraints nullable="true" />
            </column>
            <column name="pendinginvoiceamount" type="decimal(21,2)">
                <constraints nullable="true" />
            </column>
            <column name="responsibleperson_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="auditorid_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

    <changeSet id="20240730140457-1-relations" author="jhipster">

        <createTable tableName="rel_cost_control_system__projectwbs">
            <column name="projectwbs_id" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="cost_control_system_id" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="cost_control_system_id, projectwbs_id" tableName="rel_cost_control_system__projectwbs"/>

        <createTable tableName="rel_cost_control_system__contract">
            <column name="contract_id" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="cost_control_system_id" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="cost_control_system_id, contract_id" tableName="rel_cost_control_system__contract"/>
    </changeSet>

